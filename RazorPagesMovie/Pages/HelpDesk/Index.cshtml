@page "{searchString?}"
@model RazorPagesMovie.Pages.HelpDesk.IndexModel

@{
    ViewData["Title"] = "Report List";
}

<h2>การแจ้ง</h2>

<p>
    <a asp-page="Create">Report</a>
</p>

<form>
    <p>
        @Html.DisplayNameFor(model => model.Report[0].Type)
        <select asp-for="ReportType" asp-items="Model.Type">
            <option value="">All</option>
        </select>

        @Html.DisplayNameFor(model => model.Report[0].Title):
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Report) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
